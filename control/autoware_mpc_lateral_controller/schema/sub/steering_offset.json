        }
      },
      "required": [
        "enable_auto_steering_offset_removal",
        "steer_offset_filter_cutoff_hz"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "steering_offset": {
      "type": "object",
      "properties": {
        "ros__parameters": {
          "$ref": "#/definitions/steering_offset"
        }
      },
      "required": ["ros__parameters"],
      "additionalProperties": false
    }
  },
  "required": ["/**"],
  "additionalProperties": false
}
