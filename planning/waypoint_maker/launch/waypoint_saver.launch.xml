<launch>
  <arg name="config_file" default="$(find-pkg-share waypoint_maker)/config/waypoint_maker.param.yaml"/>

  <arg name="output_file_position" default="./src/autoware/universe/planning/waypoint_maker/data/"/>

  <arg name="input_pose" default="/localization/kinematic_state"/>

  <arg name="interval" default="0.5"/>

  <node pkg="waypoint_maker" exec="waypoint_saver" name="waypoint_saver" output="screen">
    <param from="$(var config_file)"/>

    <param name="output_file" value="$(var output_file_position)/waypoint_default.csv"/>

    <param name="interval" value="$(var interval)"/>

    <remap from="/input/pose" to="$(var input_pose)"/>
  </node>
</launch>
