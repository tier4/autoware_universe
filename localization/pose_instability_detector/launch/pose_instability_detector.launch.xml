<launch>
  <arg name="node_name" default="pose_instability_detector"/>
  <arg name="param_file" default="$(find-pkg-share pose_instability_detector)/config/pose_instability_detector.param.yaml"/>

  <!-- Topics -->
  <arg name="input_odometry" default="~/input/odometry"/>
  <arg name="input_twist" default="~/input/twist"/>

  <!-- Add phase1_acc_trial_ecu2 control parameter -->
  <arg name="phase1_acc_trial_ecu2" default="false" description="control components for NEDO AI accelerator experiment with 2 ECUs"/>

  <node unless="$(var phase1_acc_trial_ecu2)" pkg="pose_instability_detector" exec="pose_instability_detector_node" name="$(var node_name)" output="both">
    <remap from="~/input/odometry" to="$(var input_odometry)"/>
    <remap from="~/input/twist" to="$(var input_twist)"/>
    <param from="$(var param_file)"/>
  </node>
</launch>
