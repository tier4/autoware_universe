<launch>
  <arg name="input/odom" default="/localization/kinematic_state"/>
  <arg name="param_file" default="$(find-pkg-share localization_error_monitor)/config/localization_error_monitor.param.yaml"/>

  <!-- Add phase1_acc_trial_ecu2 control parameter -->
  <arg name="phase1_acc_trial_ecu2" default="false" description="control components for NEDO AI accelerator experiment with 2 ECUs"/>

  <node unless="$(var phase1_acc_trial_ecu2)" pkg="localization_error_monitor" exec="localization_error_monitor_node" output="both">
    <remap from="input/odom" to="$(var input/odom)"/>
    <param from="$(var param_file)"/>
  </node>
</launch>
